# Variables Exports
# Applications
export EDITOR="nvim"
export VISUAL="$EDITOR"
export BROWSER="wslview"

# Others
export HISTCONTROL="ignoreboth"

# Aliases
# alias fc="fc -e vi"
alias ..="cd .."
alias ls="lsd"
alias grep="grep --color=auto"

# Quick Access
alias neovim="cd $HOME/.config/nvim"
alias .files="cd $HOME/.dotfiles"
alias dev="cd $HOME/Documents/dev"
alias uba="cd $HOME/Documents/UBA"

# Application Specifics
# Neovim Metrics
alias nvim-perf="nvim --startuptime startup.log -c exit && tail -100 startup.log"
alias nvim-hyper-perf="hyperfine 'nvim --headless +qa' --warmup 15"

# Node Version Manager (NVM) 
export NVM_DIR="$([ -z "${XDG_CONFIG_HOME-}" ] && printf %s "${HOME}/.nvm" || printf %s "${XDG_CONFIG_HOME}/nvm")"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" 
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Startup
# fortune -l | parrotsay
 
